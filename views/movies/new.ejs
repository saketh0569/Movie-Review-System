<% include ../partials/header %>
<h1 class=" d-flex justify-content-center">
	Adding Movies
</h1>
<div class=row> 
	<form action="/movies" class="mx-auto" method="POST">
		<div class="form-group">
			<input class="form-control " type="text" name="mName" placeholder="Name of the Movie" required>
		</div> 
		<div class="form-group">
			<input class="form-control " type="text" name="mUrl" placeholder="Photo of the Movie" required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="mDescription" placeholder="Description of the Movie" required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="mRating" placeholder="Rate out of 5" required>
		</div>
		<div class="form-group">
			<input class="btn  form-control btn-primary" type="submit">
			<a class="mx-auto" href="/movies">Go Back </a>
		</div>
	</form>
</div>
<% include ../partials/footer %>